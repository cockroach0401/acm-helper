{
  "manifest_version": 3,
  "name": "ACM Helper",
  "version": "3.9.0",
  "description": "ACM 刷题状态总览与题解管理助手",
  "icons": {
    "16": "1.png",
    "32": "1.png",
    "48": "1.png",
    "128": "1.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "https://codeforces.com/*",
    "https://atcoder.jp/*",
    "https://ac.nowcoder.com/*",
    "https://www.nowcoder.com/*",
    "https://www.luogu.com.cn/*",
    "https://leetcode.cn/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "commands": {
    "auto-scrape-problem": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "自动抓取并导入当前题目"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://codeforces.com/contest/*/problem/*",
        "https://codeforces.com/gym/*/problem/*",
        "https://codeforces.com/group/*/contest/*/problem/*",
        "https://codeforces.com/group/*/gym/*/problem/*"
      ],
      "js": [
        "content/codeforces_scraper.js",
        "content/auto_scrape_shortcut.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://atcoder.jp/contests/*/tasks/*"
      ],
      "js": [
        "content/atcoder_scraper.js",
        "content/auto_scrape_shortcut.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://ac.nowcoder.com/acm/problem/*",
        "https://ac.nowcoder.com/acm/contest/*/*"
      ],
      "js": [
        "content/nowcoder_scraper.js",
        "content/auto_scrape_shortcut.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.nowcoder.com/practice/*"
      ],
      "js": [
        "content/nowcoder_practice_scraper.js",
        "content/auto_scrape_shortcut.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.luogu.com.cn/problem/*"
      ],
      "js": [
        "content/luogu_scraper.js",
        "content/auto_scrape_shortcut.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://leetcode.cn/problems/*"
      ],
      "js": [
        "content/leetcode_scraper.js",
        "content/auto_scrape_shortcut.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "1.png",
      "32": "1.png",
      "48": "1.png",
      "128": "1.png"
    }
  }
}
